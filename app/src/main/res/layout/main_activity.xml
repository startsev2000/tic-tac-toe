<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="56dp" android:id="@+id/first_button"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="152dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toTopOf="@+id/fourth_button"
            app:layout_constraintEnd_toStartOf="@+id/second_button"
            android:onClick="onButtonPressed"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="56dp" android:id="@+id/fourth_button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/first_button"
            app:layout_constraintBottom_toTopOf="@+id/seventh_button"
            app:layout_constraintEnd_toStartOf="@+id/fifth_button"
            android:onClick="onButtonPressed"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="56dp" android:id="@+id/seventh_button"
            app:layout_constraintTop_toBottomOf="@+id/fourth_button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="372dp" app:layout_constraintEnd_toStartOf="@+id/eigth_button"
            android:onClick="onButtonPressed"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="56dp" android:id="@+id/second_button"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="152dp"
            app:layout_constraintBottom_toTopOf="@+id/fifth_button"
            app:layout_constraintEnd_toStartOf="@+id/third_button"
            app:layout_constraintStart_toEndOf="@+id/first_button" android:onClick="onButtonPressed"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="56dp" android:id="@+id/fifth_button"
            app:layout_constraintTop_toBottomOf="@+id/second_button"
            app:layout_constraintBottom_toTopOf="@+id/eigth_button"
            app:layout_constraintEnd_toStartOf="@+id/sixth_button"
            app:layout_constraintStart_toEndOf="@+id/fourth_button" android:onClick="onButtonPressed"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="56dp" android:id="@+id/eigth_button"
            app:layout_constraintTop_toBottomOf="@+id/fifth_button"
            app:layout_constraintEnd_toStartOf="@+id/ninth_button"
            app:layout_constraintStart_toEndOf="@+id/seventh_button"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="372dp"
            android:onClick="onButtonPressed"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="56dp" android:id="@+id/third_button"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="152dp" android:layout_marginEnd="16dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/sixth_button"
            app:layout_constraintStart_toEndOf="@+id/second_button" android:onClick="onButtonPressed"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="56dp" android:id="@+id/sixth_button"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/third_button"
            app:layout_constraintBottom_toTopOf="@+id/ninth_button"
            app:layout_constraintStart_toEndOf="@+id/fifth_button" android:onClick="onButtonPressed"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="56dp" android:id="@+id/ninth_button"
            app:layout_constraintTop_toBottomOf="@+id/sixth_button" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="372dp"
            app:layout_constraintStart_toEndOf="@+id/eigth_button" android:onClick="onButtonPressed"/>
    <Button
            android:text="Confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/confirm_button"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="36dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>